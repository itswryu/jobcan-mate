# --- Application Configuration ---
# These are essential for application startup and behavior.
NODE_ENV="development" # "development", "production", or "test"
PORT="3000" # Port the application will run on

# --- Database Configuration ---
SQLITE_STORAGE_PATH="app_database.sqlite" # Path to the SQLite database file

# Session Secret for Express Session
SESSION_SECRET="a-very-strong-and-long-secret-key-please-change-me"

# Google OAuth Credentials (replace with your actual credentials from Google Cloud Console)
GOOGLE_CLIENT_ID="YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="YOUR_GOOGLE_CLIENT_SECRET"
GOOGLE_CALLBACK_URL="/auth/google/callback" # Ensure this matches your Google Cloud Console setup

# --- Cryptography ---
# Must be a 64-character hex string (32 bytes). Generate using: openssl rand -hex 32
AES_ENCRYPTION_KEY="generate_a_64_char_random_hex_string_for_32_byte_key"

# --- Admin User ---
# Default admin credentials for initial setup. 
# IMPORTANT: Change password immediately after first login. 
# For production, consider removing DEFAULT_ADMIN_PASSWORD from env after setup or using a more secure provisioning method.
DEFAULT_ADMIN_USERNAME="admin"
DEFAULT_ADMIN_PASSWORD="changeme"

